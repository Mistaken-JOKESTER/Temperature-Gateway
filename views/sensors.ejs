<body>

    <%- include('./partials/navbar') %>

    <main>
        <%- include('./partials/notify') %>

        <div class="container-fluid mt-5 mb-5">
            <div class="row">
                <div class="col-1"></div>
                <div class="col-md-5">
                    <form class="d-flex" method="POST" action="/serachSensor">
                        <input class="form-control me-2" type="number" name="sensor_id" placeholder="Sensor ID" aria-label="Search" value="<%= locals.search %>">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                </div>
                <div class="col-1"></div>
                <div class="col-md-4 text-center">
                    <div>
                        <ul class="pagination">
                          <li class="page-item">
                            <a class="page-link" href="/sensors" aria-label="Previous">
                              <span aria-hidden="true">&laquo;</span>
                            </a>
                          </li>
                          <li class="page-item"><a class="page-link" href="/sensors?offset=<%= locals.offset - 50 %>">Previous</a></li>
                          <li class="page-item"><a class="page-link" href=""><%= locals.offset/50 %></a></li>
                          <li class="page-item"><a class="page-link" href="/sensors?offset=<%= locals.offset + 50 %>">Next</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-1"></div>
            </div>
        </div>

        <div class="container-fluid">
            <div class="row text-center">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr class="text-primary small-text">
                          <th scope="col">#</th>
                          <th scope="col">ID</th>
                          <th scope="col">Type</th>
                          <th scope="col">Battery</th>
                          <th scope="col">Condition</th>
                          <th scope="col">Button Press</th>
                          <th scope="col">Temperature</th>
                          <th scope="col">Humidity</th>
                          <th scope="col">RSSI</th>
                          <th scope="col">Time</th>
                          <th scope="col">View</th>
                        </tr>

                        <tbody class="small-text">
                            <% if(locals.response.length == 0) { %>
                                <tr>
                                    <td>null</td>
                                    <td>null</td>
                                    <td>null</td>
                                    <td>null</td>
                                    <td>null</td>
                                    <td>null</td>
                                    <td>null</td>
                                    <td>null</td>
                                    <td>null</td>
                                    <td>null</td>
                                    <td>null</td>
                                </tr>
                            <% } else { %>
                                <% locals.response.forEach((res, i) => { %>
                                    <tr>
                                        <th scope="row"><%= i+1 %></th>
                                        <td><%= res.sensor_id %></td>
                                        <td><%= res.type %></td>
                                        <td ><button style="border: none;" id="battery<%= res.sensor_id %>" class="battery" onfocus="plotGraph('<%= res.sensor_id %>')"><%= res.battery_voltage %></button></td>
                                        <td><%= res.condition %></td>
                                        <td><%= res.buttonPress?'ðŸŸ¢':'ðŸ”´' %></td>
                                        <td><%= res.temperature %></td>
                                        <td><%= res.humidity?res.humidity:0 %>%</td>
                                        <td><%= res.rssi %></td>
                                        <td><%= res.time %></td>
                                        <td><a href="/viewSensor/<%= res.sensor_id %>" class="viewBtn">&#8594;</a></td>
                                    </tr>
                                <% })%>
                            <% } %>
                        </tbody>
                      </thead>
                </table>
            </div>
    </main>

    <div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-fullscreen">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Battery Voltage Graph</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center" id="graph">

            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script>
        var myModal = new bootstrap.Modal(document.getElementById('myModal'))
        const graph = document.getElementById('graph')
        let charto
        function plotGraph(sensor_id){
            console.log(sensor_id)
            if(charto instanceof Chart){
                console.log('chart')
                charto.destroy()
                delete charto
            }
            myModal.show()
            graph.innerHTML = '<div class="spinner-grow" role="status" id="loading" style="margin: auto 50vh;"><span class="visually-hidden">Loading...</span></div>'
            axios({
                //13.233.233.37
                method:'get',
                url:"http://13.233.233.37:5000/batteryData/" + sensor_id
            }).then(res => {
                console.log(res.data)
                graph.innerHTML = '<canvas id="myChart" style="width:100%;max-width:800px;margin:auto;"></canvas>'
                var xValues = [];
                var yValues = [];
                for (let i = 0; i < res.data.length; i++) {
                    const bv = res.data[i].bv;
                    yValues.push(bv)
                    xValues.push(i+1)
                }
                console.log(xValues, yValues)
                charto = new Chart("myChart", {
                    type: "line",
                    data: {
                        labels: xValues,
                        datasets: [{
                            fill: false,
                            lineTension: 0.5,
                            backgroundColor: "rgba(0,0,255,1.0)",
                            borderColor: "rgba(0,0,255,0.1)",
                            data: yValues,
                            label: 'Battery voltage',
                        }]
                    },
                    options: {
                        legend: {display: false},
                        scales: {
                            y:{
                                ticks: {
                                    max: 4,
                                    min: 0
                                },
                                title: {
                                    color: 'red',
                                    display: true,
                                    text: 'Voltage'
                                }
                            },
                            x: {
                                title: {
                                    color: 'red',
                                    display: true,
                                    text: 'Number of battery reading'
                                }
                            }
                        }
                    }
                    });
            }).catch(err => {
                console.log(err.response)
                graph.innerHTML = "Failed to fetch data"
            })
        }
    </script>
</body>

</html>
