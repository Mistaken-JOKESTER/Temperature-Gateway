        }
        .viewBtn{
            text-decoration: none; 
            border: none; border-radius: 5px;
            background-color: rgb(172, 229, 255);
            padding: 3px 5px 4px;
        }
        .viewBtn:hover{
            color: white;
            background-color: rgb(53, 124, 156);
        }
        .battery:hover{
            cursor: pointer;
        }
        .graphContiner {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 60%;
            background-color: rgb(231, 206, 255);
            color: white;
